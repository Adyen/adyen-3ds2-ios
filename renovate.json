{
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions updates",
      "schedule": ["before 5am on Monday"]
    },
    {
      "matchManagers": ["swift"],
      "groupName": "Swift dependencies",
      "schedule": ["before 5am on Monday"]
    },
    {
      "matchManagers": ["cocoapods"],
      "groupName": "CocoaPods dependencies",
      "schedule": ["before 5am on Monday"]
    }
  ]
}
